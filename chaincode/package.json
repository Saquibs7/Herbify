{
  "name": "herbify-chaincode",
  "version": "1.0.0",
  "description": "Smart contract for Ayurvedic herb traceability on Hyperledger Fabric",
  "main": "index.js",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "scripts": {
    "start": "fabric-chaincode-node start",
    "test": "nyc mocha test --recursive --timeout 10000"
  },
  "dependencies": {
    "fabric-contract-api": "^2.5.8",
    "fabric-shim": "^2.5.8"
  },
  "devDependencies": {
    "chai": "^4.3.4",
    "mocha": "^10.0.0",
    "nyc": "^15.1.0",
    "sinon": "^15.0.0",
    "sinon-chai": "^3.7.0"
  },
  "keywords": [
    "hyperledger",
    "fabric",
    "chaincode",
    "traceability",
    "ayurveda",
    "herbs"
  ],
  "author": "Herbify Development Team",
  "license": "Apache-2.0",
  "nyc": {
    "exclude": [
      "coverage/**",
      "test/**"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "all": true,
    "check-coverage": true,
    "statements": 80,
    "branches": 80,
    "functions": 80,
    "lines": 80
  },
  "directories": {
    "lib": "lib"
  }
}
